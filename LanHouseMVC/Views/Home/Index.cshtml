    <div class="d-flex flex-row align-items-center justify-content-around w-75 mt-5">
    <div class="text-center">
    @{
            string githubUsername = "VitorKubica"; // Insira o nome de usuário do GitHub aqui
            string githubApiUrl = $"https://api.github.com/users/{githubUsername}";
            using (var client = new System.Net.Http.HttpClient())
            {
                client.DefaultRequestHeaders.Add("User-Agent", "AwesomeASPNETApp"); // Substitua "AwesomeASPNETApp" pelo nome de sua aplicação
                var response = await client.GetAsync(githubApiUrl);
                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsStringAsync();
                    dynamic userData = Newtonsoft.Json.JsonConvert.DeserializeObject(content);
                    string avatarUrl = userData.avatar_url;
                    <img src="@avatarUrl" alt="GitHub Avatar" class="img-fluid rounded-circle" style="width: 100px; height: 100px;" />
                }
                else
                {
                    <p>Error retrieving GitHub avatar</p>
                }
            }
        }
